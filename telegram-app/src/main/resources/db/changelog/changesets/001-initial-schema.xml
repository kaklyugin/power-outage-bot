<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="001-001" author="anton.kaklyugin">
        <comment>Create all application tables in a single transaction</comment>

        <createTable tableName="cities">
            <column name="fias_id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="district" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="is_default_top_city" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated_at" type="TIMESTAMP(6)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex tableName="cities" indexName="idx_cities_name">
            <column name="name"/>
        </createIndex>

        <createIndex tableName="cities" indexName="idx_cities_last_updated">
            <column name="last_updated_at"/>
        </createIndex>

        <createTable tableName="locations">
            <column name="location_fias_id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="city_fias_id" type="VARCHAR(36)">
                <constraints nullable="true"/>
            </column>
            <column name="city_with_type" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="city_type" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="city_type_full" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="city" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="settlement_fias_id" type="VARCHAR(36)">
                <constraints nullable="true"/>
            </column>
            <column name="settlement_with_type" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="settlement_type" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="settlement_type_full" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="settlement" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="street_fias_id" type="VARCHAR(36)">
                <constraints nullable="true"/>
            </column>
            <column name="street_with_type" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="street_type" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="street_type_full" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="street" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="last_updated_at" type="TIMESTAMP(6)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex tableName="locations" indexName="idx_locations_location_fias_id">
            <column name="location_fias_id"/>
        </createIndex>

        <createTable tableName="user_carts">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="chat_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="last_updated_at" type="TIMESTAMP(6)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex tableName="user_carts" indexName="idx_user_cart_chat_id">
            <column name="chat_id"/>
        </createIndex>

        <createTable tableName="user_sessions_cache">
            <column name="chat_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="session_data" type="jsonb">
                <constraints nullable="true"/>
            </column>

            <column name="last_updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="user_locations">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="user_cart_id" type="BIGINT">
                <constraints nullable="true" foreignKeyName="fk_user_addresses_user_cart" references="user_carts(id)"/>
            </column>
            <column name="location_fias_id" type="VARCHAR(36)">
                <constraints nullable="true"/>
            </column>
            <column name="last_updated_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <!-- Single column indexes -->
        <createIndex indexName="idx_user_addresses_user_cart_id" tableName="user_locations">
            <column name="user_cart_id"/>
        </createIndex>

        <createIndex indexName="idx_user_addresses_location_fias_id" tableName="user_locations">
            <column name="location_fias_id"/>
        </createIndex>

        <addForeignKeyConstraint
                baseTableName="user_locations"
                constraintName="fk_user_cart_id"
                baseColumnNames="user_cart_id"
                referencedTableName="user_carts"
                referencedColumnNames="id"/>

        <!-- Create power_outage_notifications table -->
        <createTable tableName="power_outage_notifications">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_cart_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="notification_text" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="is_notified" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="notified_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="true"/>
            </column>
            <column name="message_hash_codes" type="INTEGER[]">
                <constraints nullable="true"/>
            </column>
            <column name="last_updated_at" type="TIMESTAMP(6)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="power_outage_notifications"
                baseColumnNames="user_cart_id"
                constraintName="fk_power_outage_notifications_user_cart"
                referencedTableName="user_carts"
                referencedColumnNames="id"/>

        <createIndex tableName="power_outage_notifications" indexName="idx_power_outage_notifications_user_cart_id">
            <column name="user_cart_id"/>
        </createIndex>

        <!-- Create power_outage_inbound_messages table -->
        <createTable tableName="power_outage_inbound_messages">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="city" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="address" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="location_fias_id" type="VARCHAR(36)">
                <constraints nullable="true"/>
            </column>
            <column name="location_type" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="street_type" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="street_name" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="buildings_numbers" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="date_time_off" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="true"/>
            </column>
            <column name="date_time_on" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="true"/>
            </column>
            <column name="power_outage_reason" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="url" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="message_hash_code" type="INTEGER">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="is_location_fias_requested" type="boolean" defaultValue="false">
            </column>
            <column name="is_archived" type="boolean" defaultValue="false" >
                <constraints nullable="false" />
            </column>
            <column name="last_updated_at" type="TIMESTAMP(6)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex tableName="power_outage_inbound_messages" indexName="idx_power_outage_inbound_message_hash_code">
            <column name="message_hash_code"/>
        </createIndex>
        <createIndex tableName="power_outage_inbound_messages" indexName="idx_power_outage_inbound_message_location_fias_id">
            <column name="location_fias_id"/>
        </createIndex>

        <!-- Create state_machines table -->
        <createTable tableName="state_machines">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="chat_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="state" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="state_machine_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="last_updated_at" type="TIMESTAMP(6)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex tableName="state_machines" indexName="idx_state_machines_chat_id">
            <column name="chat_id"/>
        </createIndex>

        <createIndex tableName="state_machines" indexName="idx_state_machines_state">
            <column name="state"/>
        </createIndex>

        <createIndex tableName="state_machines" indexName="idx_state_machines_state_machine_name">
            <column name="state_machine_name"/>
        </createIndex>

        <!-- Create location_types table -->
        <createTable tableName="location_types">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="category" type="TEXT" defaultValue="">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="TEXT" defaultValue="">
                <constraints nullable="false"/>
            </column>
            <column name="alias" type="TEXT" defaultValue="">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated_at" type="TIMESTAMP(6)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex tableName="location_types" indexName="idx_location_types_category">
            <column name="category"/>
        </createIndex>

        <createIndex tableName="location_types" indexName="idx_location_types_type">
            <column name="type"/>
        </createIndex>

        <createIndex tableName="location_types" indexName="idx_location_types_alias">
            <column name="alias"/>
        </createIndex>

        <createIndex tableName="location_types" indexName="idx_location_types_last_updated_at">
            <column name="last_updated_at"/>
        </createIndex>

        <comment>Load initial city data</comment>
        <loadData
                tableName="cities"
                schemaName="public"
                file="db/data/cities_rostov_region.csv"
                separator=";">
            <column name="fias_id" type="STRING"/>
            <column name="name" type="STRING"/>
            <column name="type" type="STRING"/>
            <column name="district" type="STRING"/>
            <column name="is_default_top_city" type="BOOLEAN"/>
            <column name="last_updated_at" type="TIMESTAMP" defaultValueComputed="now()"/>
        </loadData>

        <comment>Load initial location type data</comment>
        <loadData
                tableName="location_types"
                schemaName="public"
                file="db/data/location_types.csv"
                separator=";">
            <column name="category" type="STRING"/>
            <column name="type" type="STRING"/>
            <column name="alias" type="STRING"/>
        </loadData>

    </changeSet>
</databaseChangeLog>